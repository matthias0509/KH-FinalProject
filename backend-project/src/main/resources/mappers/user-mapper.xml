<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kh.foodding.admin.model.dao.UserDao">

    <resultMap id="userResultMap" type="com.kh.foodding.admin.model.vo.User">
        <id property="userNo" column="USER_NO"/>
        <result property="userId" column="USER_ID"/>
        <result property="userPwd" column="USER_PWD"/>
        <result property="userName" column="USER_NAME"/>
        <result property="nickname" column="NICKNAME"/>
        <result property="birthDate" column="BIRTH_DATE"/>
        <result property="gender" column="GENDER"/>
        <result property="email" column="EMAIL"/>
        <result property="phone" column="PHONE"/>
        <result property="postcode" column="POSTCODE"/>
        <result property="mainAddress" column="MAIN_ADDRESS"/>
        
        <result property="detailAddress" column="DETAIL_ADDRESS"/>
        
        <result property="enrollDate" column="ENROLL_DATE"/>
        <result property="userYn" column="USER_YN"/>
        <result property="userRole" column="USER_ROLE"/>
        <result property="accumFund" column="ACCUM_FUND"/>
    </resultMap>

    <sql id="searchCriteria">
    WHERE 1=1
    <if test="status == null or status == ''">
        AND USER_YN = 'Y' 
    </if>
    <if test="status != null and status != 'all' and status != ''">
        AND USER_YN = #{status}
    </if>
    
    </sql>

    <select id="selectTotalCount" parameterType="hashmap" resultType="int">
        SELECT COUNT(*) FROM TB_USER
        <include refid="searchCriteria"/>
    </select>

    <select id="selectUserList" parameterType="hashmap" resultMap="userResultMap">
        SELECT * FROM (
            SELECT ROWNUM AS RNUM, A.* FROM (
                SELECT 
                    U.USER_NO, U.USER_ID, U.USER_NAME, U.NICKNAME, 
                    TO_CHAR(U.BIRTH_DATE, 'YYYY.MM.DD') AS BIRTH_DATE,
                    U.GENDER, U.EMAIL, U.PHONE, U.POSTCODE, 
                    U.MAIN_ADDRESS, 
                    U.DETAIL_ADDRESS,  TO_CHAR(U.ENROLL_DATE, 'YYYY.MM.DD') AS ENROLL_DATE,
                    U.USER_YN, U.USER_ROLE,
                    (SELECT NVL(SUM(O.ORDER_AMOUNT), 0) 
                     FROM ORDERS O 
                     WHERE O.USER_NO = U.USER_NO 
                     AND O.ORDER_STATUS = 'PAY') AS ACCUM_FUND
                FROM TB_USER U
                <include refid="searchCriteria"/>
                ORDER BY U.ENROLL_DATE DESC
            ) A
        )
        WHERE RNUM BETWEEN #{startRow} AND #{endRow}
    </select>

    <update id="updateUserInfo" parameterType="com.kh.foodding.admin.model.vo.User">
        UPDATE TB_USER
        SET 
            NICKNAME = #{nickname},
            EMAIL = #{email},
            PHONE = #{phone},
            MAIN_ADDRESS = #{mainAddress},
            DETAIL_ADDRESS = #{detailAddress}, USER_YN = #{userYn},
            USER_ROLE = #{userRole}
        WHERE USER_NO = #{userNo}
    </update>
    
    <update id="updateUserStatus" parameterType="com.kh.foodding.admin.model.vo.User">
        UPDATE TB_USER
        SET USER_YN = #{userYn}
        WHERE USER_NO = #{userNo}
    </update>

</mapper>