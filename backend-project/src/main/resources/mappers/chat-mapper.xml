<!-- ChatMapper.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.foodding.dao.ChatDAO">
    
    <!-- Chatroom ResultMap -->
    <resultMap id="chatroomMap" type="com.foodding.vo.Chatroom">
        <id property="chatroomNo" column="CHATROOM_NO"/>
        <result property="chatroomCreateDate" column="CHATROOM_CREATE_DATE"/>
        <result property="buyer" column="BUYER"/>
        <result property="seller" column="SELLER"/>
    </resultMap>
    
    <!-- Message ResultMap -->
    <resultMap id="messageMap" type="com.foodding.vo.Message">
        <id property="msgNo" column="MSG_NO"/>
        <result property="msgContent" column="MSG_CONTENT"/>
        <result property="sendDate" column="SEND_DATE"/>
        <result property="readYn" column="READ_YN"/>
        <result property="receiver" column="RECEIVER"/>
        <result property="sender" column="SENDER"/>
        <result property="chatroomNo" column="CHATROOM_NO"/>
    </resultMap>
    
    <!-- 채팅방 조회 -->
    <select id="selectChatroom" parameterType="map" resultMap="chatroomMap">
        SELECT 
            CHATROOM_NO,
            CHATROOM_CREATE_DATE,
            BUYER,
            SELLER
        FROM CHATROOM
        WHERE BUYER = #{buyer}
          AND SELLER = #{seller}
    </select>
    
    <!-- 채팅방 생성 -->
    <insert id="insertChatroom" parameterType="com.foodding.vo.Chatroom">
        INSERT INTO CHATROOM (
            CHATROOM_NO,
            CHATROOM_CREATE_DATE,
            BUYER,
            SELLER
        ) VALUES (
            SEQ_CHATROOM_NO.NEXTVAL,
            SYSDATE,
            #{buyer},
            #{seller}
        )
    </insert>
    
    <!-- 메시지 저장 -->
    <insert id="insertMessage" parameterType="com.foodding.vo.Message">
        INSERT INTO MESSAGE (
            MSG_NO,
            MSG_CONTENT,
            SEND_DATE,
            READ_YN,
            RECEIVER,
            SENDER,
            CHATROOM_NO
        ) VALUES (
            SEQ_MSG_NO.NEXTVAL,
            #{msgContent},
            SYSDATE,
            #{readYn},
            #{receiver},
            #{sender},
            #{chatroomNo}
        )
    </insert>
    
    <!-- 메시지 조회 -->
    <select id="selectMessageList" parameterType="long" resultMap="messageMap">
        SELECT 
            MSG_NO,
            MSG_CONTENT,
            SEND_DATE,
            READ_YN,
            RECEIVER,
            SENDER,
            CHATROOM_NO
        FROM MESSAGE
        WHERE CHATROOM_NO = #{chatroomNo}
        ORDER BY SEND_DATE ASC
    </select>
    
</mapper>